const leia = require("readline-sync");

let numero = leia.questionInt("Digite um numero: ");

if (numero % 2 == 0) {
  console.log("O número é par!")

  if (numero >= 0) {
    console.log("O número é positivo!")
  
  } else {
    console.log("O número é negativo!")
  
  }

} else {
  console.log("O número é ímpar!")

  if (numero > 0) {
    console.log("O número é positivo!")
  
  } else {
    console.log("O número é negativo!")
  
  }

}

